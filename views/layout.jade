      nav.centered
        a(href="/projects", title='projects') Projects
        a(href="/blog", title='blog') Blog
        a(href="/resume") Resum√©
        script
          $(function() {
              return $('header nav a').each(function(index, link) {
                var $link = $(link)
                var href = $link.attr('href')
                var URI = document.location.pathname
                if (href === URI) {
                  $link.addClass('current')
                } else {$link.removeClass('current')}
              })
            })
          
