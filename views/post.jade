extends blog

append metacontent
  meta(content=post.tags)
block content
  title #{post.title} - BrdyOrn.com
  .post
    h3
      a(href=post.url) #{post.title}
    span.date .
      #{post.date.toString().split(' ')[1]}
      #{post.date.getDate()},
      #{post.date.getFullYear()}
    .post.content
      != post.content
    .tags
      - each tag in post.tags
        .tag
          a(href=tagUrl(tag)) #{tag}
